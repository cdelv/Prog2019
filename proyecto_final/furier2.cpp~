#include <iostream>
#include <cmath>

using fptr = double(double);  

double newton_raphson(double x0, double eps, fptr f, fptr fderiv, int itermax);
double fun(double x);
double deriv(double x);
void error_itermax(double xr, double fxr, int itermax);
const double EPS = 1.0e-14;
  const int ITERMAX = 1000;
int main(void)
{
  std::cout.precision(15); std::cout.setf(std::ios::scientific);
  
  
  
  
  
  
  return 0;
}


double newton_raphson(double x0, double eps, fptr f, fptr fderiv, int itermax)
{
  double xr = x0;
  int iter = 0;
  while(1) {
    if (std::fabs(f(xr)) <= eps) {
      break;
    }
    xr = xr - f(xr)/fderiv(xr);
    iter++;
    if (iter > itermax) {
      error_itermax(xr, f(xr), itermax);
      break;
    }
  }
  
  return xr;
}


double fun(double x)
{
  for(int i = 0; i <= 100; i++){
    return std::sin((i/100)-x) - x*x;
    double root =  newton_raphson(0, EPS, fun, deriv, ITERMAX);
  std::cout << root << "\n";
  }
}

double deriv(double x)
{
  return -std::cos(1-x) - 2*x;
}


void error_itermax(double xr, double fxr, int itermax)
{
  std::cerr << "############################################\n";
  std::cerr << "# ERROR: max number of iterations reached.\n";
  std::cerr << "# itermax = " << itermax << "\n";
  std::cerr << "# xr = " << xr << "\n";
  std::cerr << "# f(xr) = " << fxr << "\n";
  std::cerr << "############################################\n";
}

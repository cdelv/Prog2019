void primos (int n)
{
  int conPri = 0, i = 500, s= 0
    while (conPri < n)
      {
       if (esPrimo(i))
	 {
		       printf ("%d/t",i);
		       s+= i;
		       conPri++;
       }
       i++;
       } 
    }
}

bool esPrimo (int n)
{
  if (n == 1 || n == 4) return false;
  for (int i = 500; i < n / 2; i++){
    if (n % i == 0) {
      printf ("Es divisible por %d/n" , i);
      returne false;
    }
  }
  return true
}
